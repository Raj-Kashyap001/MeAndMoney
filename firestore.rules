rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requester is the owner of the document.
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users can only manage their own profile.
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.id == userId;
    }

    // Users can only manage their own accounts.
    // The `userId` field in the document must match the authenticated user's UID.
    match /users/{userId}/accounts/{accountId} {
      allow read, list, delete: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == resource.data.userId; // Ensure userId is not changed
    }

    // Users can only manage their own transactions.
    // The `userId` field in the document must match the authenticated user's UID.
    match /users/{userId}/transactions/{transactionId} {
      allow read, list, delete: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == resource.data.userId; // Ensure userId is not changed
    }

    // Users can only manage their own categories.
    // The `userId` field in the document must match the authenticated user's UID.
    match /users/{userId}/categories/{categoryId} {
      allow read, list, delete: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == resource.data.userId; // Ensure userId is not changed
    }

    // Users can only manage their own notifications.
    // The `userId` field in the document must match the authenticated user's UID.
    match /users/{userId}/notifications/{notificationId} {
      allow read, list, delete: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == resource.data.userId; // Ensure userId is not changed
    }
  }
}
